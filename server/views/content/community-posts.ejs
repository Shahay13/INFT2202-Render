<h1>Community Posts</h1>

<div class="row">
    <div class="col">

        <!-- emmet example string
        button#addButton.btn.btn-primary.btn-sm.mb-1>i.fas.fa-plus.fa-sm
        -->
        <a id="addButton" href="/add-post" class="btn btn-primary btn-sm mb-1">
            <i class="fas fa-plus-circle fa-sm"> Add Post</i>
        </a>

        <% for (let count = 0; count < posts.length; count++) { %>
        <!-- Repeatable Row -->
        <div class="card mb-3">
            <div class="card-header text-left">
                <p class="text-left"><%= count + 1 %></p>
                <h2><%= posts[count].PostTitle %></h2>
                <p>Posted by: <%= posts[count].PostUser %></p>
            </div>
            <div class="card-body text-left">
                <p><%= posts[count].PostComment %></p>
                <div class="text-left">
                    <a href="/edit-post/<%= posts[count]._id %>" class="btn btn-primary btn-sm edit">
                        <i class="fas fa-edit fa-sm"> Edit</i>
                    </a>
                    <a href="/delete-post/<%= posts[count]._id %>" class="btn btn-danger btn-sm delete">
                        <i class="fas fa-trash-alt fa-sm"> Delete</i>
                    </a>
                </div>
            </div>
        </div>
                <!-- end iteration -->
            <% } %>
    </div>
</div>